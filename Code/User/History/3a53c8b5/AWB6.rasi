/* Main Config (main) */

/* ---- Configuration ---- */
configuration {
    modi:                       "drun,run,filebrowser";
    font:                       "Fira Code SemiBold 14";
    show-icons:                 true;
    display-drun:               "ÓØÜ";
	display-run:                "ÓØä";
    display-filebrowser:        "Ôí•";
    display-window:             "Û±Ç¨";
	drun-display-format:        "{name}";
